<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppHub" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.AppHub" parent="Base.Theme.AppHub" >
        <item name="colorPrimary">@color/cardColor</item>
    </style>

    <!--custom theme-->

    <!-- Robot fonts   -->

    <style name="RobotTextRegular" parent="Widget.MaterialComponents.TextView">

        <item name="fontFamily" >@font/roboto_regular</item>
        <item name="android:textSize" >16sp</item>
    </style>

    <style name="RobotTextMedium" parent="Widget.MaterialComponents.TextView">

        <item name="fontFamily" >@font/roboto_medium</item>
        <item name="android:textSize" >16sp</item>
    </style>

    <style name="RobotTextBold" parent="Widget.MaterialComponents.TextView">

        <item name="fontFamily" >@font/roboto_bold</item>
        <item name="android:textSize" >16sp</item>
    </style>

    <!-- Nunito fonts   -->

    <style name="NunitoTextRegular" parent="Widget.MaterialComponents.TextView">

        <item name="fontFamily" >@font/nunito_regular</item>
        <item name="android:textSize" >16sp</item>
    </style>

    <style name="NunitoTextMedium" parent="Widget.MaterialComponents.TextView">

        <item name="fontFamily" >@font/nunito_medium</item>
        <item name="android:textSize" >16sp</item>
    </style>

    <style name="NunitoTextBold" parent="Widget.MaterialComponents.TextView">

        <item name="fontFamily" >@font/nunito_bold</item>
        <item name="android:textSize" >16sp</item>
    </style>

    <!-- Playfair display fonts   -->

    <style name="PlayfairTextRegular" parent="Widget.MaterialComponents.TextView">

        <item name="fontFamily" >@font/playfair_display_regular</item>
        <item name="android:textSize" >16sp</item>
    </style>

    <style name="PlayfairTextMedium" parent="Widget.MaterialComponents.TextView">

        <item name="fontFamily" >@font/playfair_display_medium</item>
        <item name="android:textSize" >16sp</item>
    </style>

    <style name="PlayfairTextBold" parent="Widget.MaterialComponents.TextView">

        <item name="fontFamily" >@font/playfair_display_bold</item>
        <item name="android:textSize" >16sp</item>
    </style>

    <style name="RoundedImage" parent="">

        <item name="cornerFamily">rounded</item>
        <item name="android:topLeftRadius">20dp</item>
        <item name="android:topRightRadius">20dp</item>
        <item name="android:bottomLeftRadius">20dp</item>
        <item name="android:bottomRightRadius">20dp</item>
        <item name="color">@color/activeButtonColor</item>
    </style>

    <style name="CustomTextFiled" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="boxStrokeColor">@color/lightGray</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="cursorColor">@color/lightGray</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="CustomDialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="cardCornerRadius">20dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

</resources>